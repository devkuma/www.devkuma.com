    <input id="foo" value="http://www.devkuma.com">

    <!-- Trigger -->
    <button class="btn" data-clipboard-target="#foo">
        Copy to clipboard
    </button>
  
  
  <script>
    new Clipboard('.btn');
  </script>
  
</body>
